<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover mt-4">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @user.friends.each do |friends| %>
          <tr>
            <td><%= friends.email %></td>
            <td><%= friends.first_name %></td>
            <td><%= friends.last_name %></td>
            <td><%= link_to 'Stop Following', friendship_path(friends), :method => :delete, data: {confirm: "Are you sure?"},
                                           class: "btn btn-sm btn-warning" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
